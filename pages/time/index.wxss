.story{
  background-color: white;
  border-radius: 5px;
}
.weui-grids{
  /* margin-bottom: 10px; */
}
.weui-grids::after, .weui-grids::before{
  height: 0;
  width: 0;
}
.weui-grid::after, .weui-grid::before{
  height: 0;
  width: 0;
}
.weui-grid{
  height:0;
  padding-bottom: 33.33333333%;
  position:relative;
}
.image{
  width: 90%;
  height: 90%;
  position:absolute;
  left:5%;
  top:5%;
  border-radius: 5px;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
}
.weui-grid-1{
  width: 100%;
  height: 200px;
  position: relative;
  overflow: hidden;
}
.weui-grid-1 .image{
  left:0;
  top:5%;
  margin: 0 1.67%;
  padding:0;
  padding-right:0;
  width:96.6%;
  border-radius: 5px;
}