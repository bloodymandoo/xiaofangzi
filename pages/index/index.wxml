<scroll-view scroll-y style="width: 100%; height: 100vh;" type="custom">
  <swiper style="width: 100%; height: 20vh;" indicator-dots="{{indicatorDots}}" 
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{background}}" wx:key="*this">
      <swiper-item>
        <view style="width: 100%; height: 100%">
          <image style="width: 100%; height: 100%" src="https://picsum.photos/100/100?random={{index}}" mode="aspectFill"></image>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <grid-view style="width: 100%; height: 80vh;" type="masonry" cross-axis-count="{{crossAxisCount}}" cross-axis-gap="{{crossAxisGap}}" main-axis-gap="{{mainAxisGap}}">
    <grid-tile-img wx:for="{{gridList}}" wx:key="id" index="{{item.id}}" width="{{200}}" height="{{100 * item.sub}}"></grid-tile-img>
  </grid-view>
</scroll-view>